@model ReceiveSBSQS.Models.ReceiveQueueModel



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <script src="https://kit.fontawesome.com/d0e88be18f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
          crossorigin="anonymous" />

    <style>
        .bird {
            position: relative;
            width: 1500px;
            margin: 0px -100px;
            height: 150px;
        }

        .bird i {
            font-size: 125px;
            transition: .3s;
            padding-right: 1000px;
            }

        .container {
            padding: 10px 20px;
            height: 10px;
        }

        .btn {
            position: center;
            width: 960px;
            margin: 0px auto;
        }

        .col-form-label {
            position: center;
            width: auto;
            height: auto;
            margin-left: -100px;
        }

    </style>

</head>
<body>

    <div class="bird animate__animated animate__fadeInBottomLeft">
        <i class="fas fa-crow fa-5x"></i>
    </div>
    <div class="text-center">
    </div>
    <div class="row">
        <div class="card-body">
            <div class="form-group row mb-9">
                <div class="col-sm-9">
                    <button type="submit" id="btnReceive" class="btn btn-primary" value="Reload Page" onClick="window.location.reload(true)">Receive Message</button>
                    <br />  
                    <br />  
                    <script>

                        let birdIcon = document.querySelector('.bird');
                        let icon = document.querySelector('.bird i');
                        let btnReceive = document.querySelector("#btnReceive")
                        icon.style.transform = "scaleX(-1)"
                        let posX = 2000;
                        icon.style.position = 'absolute';


                        btnReceive.addEventListener("click", function () {

                            let animate = setInterval(function () {
                                icon.style.left = posX + "px";
                                posX -= 40

                                if (posX <= 0) {
                                    clearInterval(animate)
                                    icon.style.transform = "scaleX(+1)"
                                }
                            }, 50);                            
                        })

                    </script>

                    <div class="row">
                        <div class="col-md-6 border border-dark mt-6">
                            <p style=" font-size:30px; text-align:center;">AWS.SQS</p>


                            <p class="display-6">@Model.AwsMessage</p>


                        </div>
                        <div class="col-md-6 border border-dark mt-6 ml-2">
                            <p style=" font-size:30px; text-align:center;">Azure Service Bus</p>

                            <p class="display-6">@Model.AzureMessage</p>



                        </div>

                    </div>

                </div>
            </div>
            <br />
        </div>
    </div>
</body>
</html>

